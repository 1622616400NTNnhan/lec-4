import java.util.Scanner;

public class QuadrantDetermination {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Nhập hoành độ x: ");
        double x = scanner.nextDouble();

        System.out.print("Nhập tung độ y: ");
        double y = scanner.nextDouble();
        if (x > 0 && y > 0) {
            System.out.println("Điểm nằm ở góc phần tư thứ 1.");
        } else if (x < 0 && y > 0) {
            System.out.println("Điểm nằm ở góc phần tư thứ 2.");
        } else if (x < 0 && y < 0) {
            System.out.println("Điểm nằm ở góc phần tư thứ 3.");
        } else if (x > 0 && y < 0) {
            System.out.println("Điểm nằm ở góc phần tư thứ 4.");
        } else if (x == 0 && y == 0) {
            System.out.println("Điểm nằm tại gốc tọa độ (0,0).");
        } else {
            System.out.println("Điểm nằm trên trục tọa độ.");
        }

        scanner.close();
    }
}
